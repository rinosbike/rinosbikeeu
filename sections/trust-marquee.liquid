  {% assign text_3 = "Direkt zum Verbraucher - Ohne Zwischenhändler" %}
  {% assign text_4 = "95% Vormontiert" %}
{% elsif current_locale == 'fr' %}
  {% assign text_1 = "Garantie Cadre 2 Ans" %}
  {% assign text_2 = "Support Client à Vie" %}
  {% assign text_3 = "Direct Consommateur - Sans Intermédiaires" %}
