<div class="trust-marquee-wrapper">
  <div class="trust-marquee">
    <div class="trust-marquee-content">
      {% for i in (1..2) %}
        <span class="trust-item">
          <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          </svg>
          {{ text_1 }}
        </span>
        <span class="trust-divider">•</span>
        <span class="trust-item">
          <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
          </svg>
          {{ text_2 }}
        </span>
        <span class="trust-divider">•</span>
        <span class="trust-item">
          <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
          </svg>
          {{ text_3 }}
        </span>
        <span class="trust-divider">•</span>
        <span class="trust-item">
          <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
          </svg>
          {{ text_4 }}
        </span>
        <span class="trust-divider">•</span>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.trust-marquee-wrapper {
  background-color: {{ section.settings.bg_color }};
  overflow: hidden;
  padding: {{ section.settings.padding_vertical }}px 0;
  width: 100%;
}

.trust-marquee {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.trust-marquee-content {
  display: flex;
  align-items: center;
  white-space: nowrap;
  animation: marquee {{ section.settings.speed }}s linear infinite;
  will-change: transform;
}

.trust-marquee-wrapper:hover .trust-marquee-content {
  animation-play-state: paused;
}

.trust-item {
  color: {{ section.settings.text_color }};
  font-size: {{ section.settings.font_size }}px;
  font-weight: {{ section.settings.font_weight }};
  letter-spacing: 0.5px;
  text-transform: {{ section.settings.text_transform }};
  padding: 0 20px;
  display: inline-flex;
  align-items: center;
  gap: 8px;
}

.trust-icon {
  width: {{ section.settings.font_size | plus: 2 }}px;
  height: {{ section.settings.font_size | plus: 2 }}px;
  flex-shrink: 0;
}

.trust-divider {
  color: {{ section.settings.text_color }};
  opacity: 0.5;
  font-size: {{ section.settings.font_size }}px;
  padding: 0 10px;
}

@keyframes marquee {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

/* Mobile adjustments */
@media (max-width: 768px) {
  .trust-item {
    font-size: {{ section.settings.font_size | minus: 2 }}px;
    padding: 0 15px;
    gap: 6px;
  }
  
  .trust-icon {
    width: {{ section.settings.font_size }}px;
    height: {{ section.settings.font_size }}px;
  }
  
  .trust-marquee-content {
    animation: marquee {{ section.settings.speed | times: 0.7 }}s linear infinite;
  }
}
</style>

{% schema %}
{
  "name": "Trust Marquee Banner",
  "settings": [
    {
      "type": "paragraph",
      "content": "Translations auto-detect based on store language: EN, ES, DE, FR, PL, BG. To edit translations, modify the code."
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Font Size",
      "default": 14
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font Weight",
      "options": [
        {"value": "400", "label": "Normal"},
        {"value": "500", "label": "Medium"},
        {"value": "600", "label": "Semi Bold"},
        {"value": "700", "label": "Bold"}
      ],
      "default": "500"
    },
    {
      "type": "select",
      "id": "text_transform",
      "label": "Text Style",
      "options": [
        {"value": "none", "label": "Normal"},
        {"value": "uppercase", "label": "Uppercase"},
        {"value": "capitalize", "label": "Capitalize"}
      ],
      "default": "uppercase"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 10,
      "max": 50,
      "step": 5,
      "unit": "s",
      "label": "Scroll Speed",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "min": 8,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Vertical Padding",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Trust Marquee Banner"
    }
  ]
}
{% endschema %}
