{% comment %}
  Rinosbike Comparison - Interactive Carousel
  Uses translation keys for specs, editable commentary only
  Compact small buy buttons
{% endcomment %}

<div class="comparison-carousel-section" 
     style="
       background-color: #ffffff;
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
     ">
  
  <div class="comparison-carousel-container" 
       style="max-width: {{ section.settings.container_width }}px; margin: 0 auto; padding: 0 {{ section.settings.container_padding }}px;">
    
    <div class="comparison-carousel-wrapper" 
         style="
           display: flex;
           gap: {{ section.settings.gap }}px;
           align-items: {{ section.settings.vertical_alignment }};
         ">
      
      <!-- VIDEO SIDE -->
      <div class="carousel-video-side" 
           style="
             flex: 0 0 {{ section.settings.video_width_percent }}%;
             min-width: {{ section.settings.video_min_width }}px;
             max-width: {{ section.settings.video_max_width }}px;
           ">
        
        {% if section.settings.video_label != blank %}
          <div style="margin-bottom: 16px;">
            <p style="font-size: 11px; color: #666666; font-weight: 500; text-transform: uppercase; letter-spacing: 1px;">{{ section.settings.video_label }}</p>
          </div>
        {% endif %}
        
        {% if section.settings.video_type == 'youtube' %}
          <div class="video-embed-wrapper" 
               style="position: relative; width: 100%; padding-bottom: {{ section.settings.video_aspect_ratio }}%; border-radius: {{ section.settings.video_border_radius }}px; overflow: hidden; {% if section.settings.video_shadow %}box-shadow: 0 4px 16px rgba(0,0,0,0.08);{% endif %}">
            <iframe 
              src="https://www.youtube.com/embed/{{ section.settings.youtube_id }}?rel=0&modestbranding=1&playsinline=1{% if section.settings.autoplay %}&autoplay=1&mute=1{% endif %}{% if section.settings.loop %}&loop=1&playlist={{ section.settings.youtube_id }}{% endif %}{% if section.settings.hide_controls %}&controls=0{% endif %}"
              style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen>
            </iframe>
          </div>
        {% elsif section.settings.video_type == 'vimeo' %}
          <div class="video-embed-wrapper" 
               style="position: relative; width: 100%; padding-bottom: {{ section.settings.video_aspect_ratio }}%; border-radius: {{ section.settings.video_border_radius }}px; overflow: hidden; {% if section.settings.video_shadow %}box-shadow: 0 4px 16px rgba(0,0,0,0.08);{% endif %}">
            <iframe 
              src="https://player.vimeo.com/video/{{ section.settings.vimeo_id }}?title=0&byline=0&portrait=0{% if section.settings.autoplay %}&autoplay=1&muted=1{% endif %}{% if section.settings.loop %}&loop=1{% endif %}"
              style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
              allow="autoplay; fullscreen; picture-in-picture"
              allowfullscreen>
            </iframe>
          </div>
        {% elsif section.settings.video_file != blank %}
          <div style="border-radius: {{ section.settings.video_border_radius }}px; overflow: hidden; {% if section.settings.video_shadow %}box-shadow: 0 4px 16px rgba(0,0,0,0.08);{% endif %}">
            <video {% if section.settings.autoplay %}autoplay{% endif %} {% if section.settings.loop %}loop{% endif %} {% if section.settings.muted %}muted{% endif %} {% if section.settings.controls %}controls{% endif %} playsinline style="width: 100%; height: auto; display: block;">
              <source src="{{ section.settings.video_file }}" type="video/mp4">
            </video>
          </div>
        {% else %}
          <div style="aspect-ratio: 9/16; background: #f5f5f5; display: flex; align-items: center; justify-content: center; border-radius: {{ section.settings.video_border_radius }}px; border: 1px solid #e0e0e0;">
