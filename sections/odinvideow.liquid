    .why-choose-us-side { width: 100% !important; order: 3; margin-top: 40px; }
    .carousel-cards-side { width: 100% !important; order: 2; }
    .carousel-viewport { min-height: 450px !important; }
  }
  .carousel-card { cursor: grab; }
  .carousel-card:active { cursor: grabbing; }
  .carousel-card:hover { border-color: #000000; transform: translateY(-4px); box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12) !important; }
  .carousel-card:hover img { transform: scale(1.06); }
  .carousel-card.is-featured:hover { border-color: #000000; box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15) !important; }
  .carousel-btn:hover { border-color: #000000; background: #f5f5f5; }
  .carousel-btn:active { transform: scale(0.95); }
  .carousel-dot { width: 8px; height: 8px; border-radius: 50%; background: #e0e0e0; cursor: pointer; transition: all 0.3s ease; border: none; padding: 0; }
  .carousel-dot.active { background: #000000; width: 24px; border-radius: 4px; }
  .carousel-dot:hover { background: #000000; }
